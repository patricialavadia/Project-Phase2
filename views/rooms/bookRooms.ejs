<%- include ('../partials/header') %>
<div class="container my-5">
    <header>
        <br>
        <h1 class="display-3">Reservation</h1>
    </header>

    <form action="/rooms/bookCustomers", method="POST">
        <input type="hidden" name="roomId" value="<%= formData.id %>">   
        <input type="hidden" name="classification" value="<%= formData.classification %>">   
        <input type="hidden" name="roomNo" value="<%= formData.roomNo %>"> 
        <input type="hidden" name="price" value="<%= formData.price %>">     
        <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="validationDefault01">First name</label>
              <input type="text" class="form-control" id="validationDefault01" name="firstName" required>
            </div>
            <div class="col-md-6 mb-3">
              <label for="validationDefault02">Last name</label>
              <input type="text" class="form-control" id="validationDefault02" name="lastName" required>
            </div>
          </div>
          <div class="form-row">
            <div class="col-md-6 mb-3">
              <label for="validationDefault03">Address</label>
              <input type="text" class="form-control" id="validationDefault03" name="address" required>
            </div>
            <div class="col-md-3 mb-3">
              <label for="validationDefault04">Contact</label>
                <input type="text" class="form-control" id="validationDefault03" name="phone" required>
            </div>
            <div class="col-md-3 mb-3">
              <label for="validationDefault05">Email</label>
              <input type="email" class="form-control" id="validationDefault05" name="email" required>
            </div>
          </div> 

        <div class="form-row">
            <div class="col-md-4 mb-3">
              <label for="validationDefault01">From</label>
              <input type="date" name="dateFrom" class="form-control" >
            </div>
            <div class="col-md-4 mb-3">
              <label for="validationDefault02">To</label>
              <input type="date" name="dateTo" class="form-control" >
            </div>
            <div class="col-md-4 mb-3">
                <label for="validationDefault02">Number of Guest</label>
                <input type="number" name="numberOfGuest" class="form-control" >
              </div>
          </div>
        <div class="form-group">
          <button type="submit" class="btn btn-dark">Submit</button>
        </div>
      </form>
</div>

<%- include ('../partials/footer') %>
